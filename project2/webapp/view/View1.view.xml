				<content>
					<Button id="_IDGenButton1"
						text="Show BusyIndicator"
						press="show4000"
					>
					</Button>
				</content>
			</Panel>

			<Panel id="_IDGenPanel3"
				headerText="Open BusyIndicator for four seconds (zero delay)"
